# Environment Configuration for RNL FOOD Service
# Copy this file to .env and fill in your values
# For production deployment on Render, set these in the dashboard

# ==================================================
# REQUIRED SETTINGS
# ==================================================

# PostgreSQL connection string (from Neon.tech)
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters

# ==================================================
# OPTIONAL SETTINGS
# ==================================================

# Telegram Bot Token (get from @BotFather)
BOT_TOKEN=your_telegram_bot_token_here

# Database connection pool size (default: 10)
DB_MAX_CONNECTIONS=10

# Cache TTL in seconds (default: 300)
CACHE_TTL=300

# Log level: error, warn, info, debug (default: info)
LOG_LEVEL=info

# ==================================================
# DEVELOPMENT ONLY (not used in production)
# ==================================================

# Enable debug mode (development only)
DEBUG=false
